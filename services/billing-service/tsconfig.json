{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "noEmit": false,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@billing/*": ["billing/*"],
      "@pricing/*": ["pricing/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
